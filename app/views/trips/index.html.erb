<p style="color: green"><%= notice %></p>

<h1>Trips</h1>
<% console %>
<% if @result %>

  <p><strong><%= JSON.parse(@result) rescue nil %></strong></p>
<% end %>

<div id="trips">
  <% @trips.each do |trip| %>
    <%= render trip %>
    <p>
      <%= link_to "Show this trip", trip %>
    </p>
  <% end %>
</div>

<%= link_to "New trip", new_trip_path %>
